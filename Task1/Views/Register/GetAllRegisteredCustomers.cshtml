@model IEnumerable<MVCApplication.Models.ViewModel.RegisterViewModel>

@{
    ViewData["Title"] = "GetAllRegisteredCustomers";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .page-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .table {
            margin-top: 20px;
        }

            .table th, .table td {
                vertical-align: middle;
            }

        .table-actions {
            display: flex;
            justify-content: space-between;
        }

        .back-link {
            display: inline-block;
            margin-top: 10px;
        }

            .back-link a {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
                border: 1px solid #007bff;
            }

                .back-link a:hover {
                    background-color: #0056b3;
                    border: 1px solid #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-container">
            <h2 class="text-center">All Registered Customers</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Confirm Password</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.RegisterID)</td>
                                <td>@Html.DisplayFor(modelItem => item.First_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Last_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                <td>@Html.DisplayFor(modelItem => item.Confirm_Password)</td>
                                <td class="table-actions">
                                    <a class="action-link edit-link" asp-action="Edit" asp-route-RegisterID="@item.RegisterID" asp-controller="Customer">Edit</a>
                                    <a class="action-link delete-link" href="/Register/Delete?RegisterID=@item.RegisterID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="back-link">
            <a asp-controller="Login" asp-action="Logout">Logout</a>
        </div>
    </div>
</body>
</html>
