@model MVCApplication.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Login</h2>
                </div>    
                <div class="card-body">
                    <form asp-action="Index" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            @* <select id="emailDropdown" asp-for="Email" class="form-control">
                                <option>Select</option>
                                @foreach (var email in ViewBag.Register)
                                {
                                    <option value="@email">@email</option>
                                }
                            </select> *@
                            <input asp-for="Email" class="form-control" required />
                            <div class="invalid-feedback">
                                Please enter your email.
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" required />
                            <div class="invalid-feedback">
                                Please enter your password.
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label">Remember Me</label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
